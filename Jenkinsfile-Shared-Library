#!/usr/bin/env groovy
library identifier: 'devops-shared-lib@master', retriever: modernSCM(
    [$class: 'GitSCMSource',
     remote: 'https://github.com/TheSudheer/Jenkins-shared-library.git'
     credentialsId: 'GitHub'
    ])

pipeline {
    agent any
    environment {
        imageName = "kalki2878/java-gradle-app:latest"
    }
    stages {
        stage("build jar") {
            steps {
                script {
                    buildJar() // Building the JAR file using the shared library function.
                }
            }
        }
        stage("build image") {
            steps {
                script {
                    buildImage(env.imageName) // Pass the env variable value (not the literal string)
                }
            }
        }
        stage("deploy") {
            steps {
                script {
                    sshagent(['ec2-server-key']) {
                        def dockerCmd = "docker run -d -p 8090:8080 kalki2878/java-gradle-app:latest"
                        sh "ssh -o StrictHostKeyChecking=no ubuntu@52.87.160.165 ${dockerCmd}"
                        echo "Deploying the application..."
                    }
                }
            }
        }
    }
}
